{
  "extends": ["tslint-consistent-codestyle"],
  "rulesDirectory": ["codelyzer"],
  "rules": {
    "adjacent-overload-signatures": true,
    "align": [true, "elements", "members", "parameters", "statements"],
    "arrow-return-shorthand": true,
    "ban-comma-operator": true,
    "callable-types": true,
    "class-name": true,
    "completed-docs": [
      true,
      "enums",
      {
        "functions": {
          "visibilities": ["exported"]
        },
        "properties": {
          "locations": "all",
          "privacies": ["public"]
        },
        "methods": {
          "locations": "all",
          "privacies": ["public"]
        }
      }
    ],
    "comment-format": [true, "check-space"],
    "curly": true,
    "cyclomatic-complexity": {
      "severity": "warn"
    },
    "deprecation": {
      "severity": "warn"
    },
    "encoding": true,
    "eofline": true,
    "forin": true,
    "import-blacklist": [true, "rxjs/Rx"],
    "import-spacing": true,
    "indent": [true, "spaces"],
    "interface-over-type-literal": true,
    "jsdoc-format": true,
    "label-position": true,
    "linebreak-style": [true, "LF"],
    "match-default-export-name": true,
    "max-classes-per-file": [true, 1],
    "max-line-length": {
      "severity": "warn",
      "options": [140]
    },
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": "instance-sandwich"
      }
    ],
    "new-parens": true,
    "newline-before-return": false,
    "newline-per-chained-call": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-boolean-literal-compare": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [true, 3],
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace", "log"],
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": true,
    "no-dynamic-delete": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": true,
    "no-import-side-effect": [true, { "ignore-module": "(\\.html|\\.css)$" }],
    "no-inferrable-types": [true, "ignore-params"],
    "no-inferred-empty-object-type": true,
    "no-internal-module": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-irregular-whitespace": true,
    "no-mergeable-namespace": true,
    "no-misused-new": true,
    "no-non-null-assertion": false,
    "no-object-literal-type-assertion": true,
    "no-redundant-jsdoc": true,
    "no-reference-import": true,
    "no-return-await": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": [true, "ignore-jsdoc"],
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-class": [true, "allow-empty-class", "allow-static-only"],
    "no-unnecessary-initializer": true,
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": false,
    "no-unsafe-any": false,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],
    "no-var-keyword": true,
    "no-void-expression": {
      "severity": "warn"
    },
    "number-literal-format": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-shorthand": true,
    "object-literal-sort-keys": false,
    "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
    "one-variable-per-declaration": true,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "case-insensitive",
        "grouped-imports": true
      }
    ],
    "prefer-conditional-expression": true,
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-function-over-method": false,
    "prefer-method-signature": true,
    "prefer-object-spread": true,
    "prefer-switch": true,
    "prefer-template": [true, "allow-single-concat"],
    "quotemark": [true, "single"],
    "radix": true,
    "restrict-plus-operands": false,
    "return-undefined": true,
    "semicolon": [false, "always"],
    "switch-default": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "ignore",
          "arrays": "always"
        }
      }
    ],
    "triple-equals": [true, "allow-null-check"],
    "type-literal-delimiter": true,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "use-isnan": true,
    "use-default-type-parameter": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case", "allow-snake-case"],
    "whitespace": [true, "check-branch", "check-decl", "check-module", "check-operator", "check-preblock", "check-separator", "check-type"],

    "angular-whitespace": [true, "check-interpolation", "check-semicolon"],
    "template-banana-in-box": true,
    "component-class-suffix": true,
    "component-selector": [false, "element", [""], "kebab-case"],
    "contextual-lifecycle": true,
    "contextual-decorator": true,
    "directive-class-suffix": true,
    "directive-selector": [true, "attribute", [""], "camelCase"],
    "import-destructuring-spacing": true,
    "no-forward-ref": true,
    "no-input-rename": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-unused-css": true,
    "template-no-negated-async": true,
    "template-use-track-by-function": {
      "severity": "warn"
    },
    "no-host-metadata-property": {
      "severity": "warn"
    },
    "no-inputs-metadata-property": {
      "severity": "warn"
    },
    "use-lifecycle-interface": true,
    "no-outputs-metadata-property": {
      "severity": "warn"
    },
    "use-pipe-decorator": true,
    "use-pipe-transform-interface": true,
    "use-component-view-encapsulation": true,

    "no-accessor-recursion": true,
    "no-as-type-assertion": true,
    "no-collapsible-if": false,
    "no-else-after-return": true,
    "no-static-this": true,
    "no-unnecessary-else": true,
    "no-unnecessary-type-annotation": false,
    "no-var-before-return": [true, "allow-destructuring"],
    "prefer-const-enum": true,
    "prefer-while": true
  }
}
